package nag;
import java.util.Scanner;

public class n_squares {
	public static void main(String[]args)
	{
		Scanner in=new Scanner(System.in);
		System.out.println("Enter n for n-square matrix");
		int n=in.nextInt();
		if(n<0)
		{
			System.out.println("Invalid Input");
		}
		else
		{
			int sum=0;
			while(n>0)
		
			{
				
				sum=sum+(n*n);
				n--;
			}
			System.out.println("Number of square matrices are: "+ sum);

		}
	} 
}
